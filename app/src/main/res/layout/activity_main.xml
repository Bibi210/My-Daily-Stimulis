<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#6A6262"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Pseudo_Field"
        android:layout_width="279dp"
        android:layout_height="80dp"
        android:layout_marginTop="47dp"
        android:layout_marginBottom="33dp"
        android:background="@color/cardview_shadow_start_color"
        android:editable="false"
        android:ems="10"
        android:hint="Entrer Pseudo"
        android:inputType="textPersonName|textEmailAddress"
        android:textAlignment="center"
        android:textColorHint="@color/orange"
        app:layout_constraintBottom_toTopOf="@+id/main_start_btn"
        app:layout_constraintEnd_toEndOf="@+id/main_start_btn"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/main_start_btn"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/main_score_btn"
        android:layout_width="310dp"
        android:layout_height="66dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="228dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="9dp"
        android:text="LeaderBord"
        app:layout_constraintBottom_toTopOf="@+id/LeaderBord_List"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:autoText="false"
        android:fontFamily="@font/artifika"
        android:gravity="center"
        android:text="My Daily Stimulus"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.062" />

    <Button
        android:id="@+id/main_start_btn"
        android:layout_width="310dp"
        android:layout_height="66dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="14dp"
        android:text="Lancer Jeu"
        app:layout_constraintBottom_toTopOf="@+id/main_score_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ListView
        android:id="@+id/LeaderBord_List"
        android:layout_width="409dp"
        android:layout_height="333dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_score_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>